    <Style Selector="Window">
        <Setter Property="WindowStartupLocation" Value="CenterScreen"/>
        <Setter Property="CanResize" Value="False"/>
        <Setter Property="ExtendClientAreaToDecorationsHint" Value="True"/>
        <Setter Property="Icon" Value="/Assets/favicon.ico"/>
    </Style>
    
    <!-- Header -->
    
    <!-- Header | Logo -->
    <Style Selector="Border.header-border">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="Margin" Value="20 0 30 0"/>
        <Setter Property="BoxShadow" Value="10 5 45 0 DarkGray"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0%, 50%" EndPoint="100%, 50%" >
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Offset="0.1" Color="#C471F5"/>
                        <GradientStop Offset="0.5" Color="#e074bc"/>
                        <GradientStop Offset="1.0" Color="#FA71CD"/>
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style Selector="Button.header-button">
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        
        <Style Selector="^:pressed /template/ ContentPresenter">
            <Setter Property="Background" Value="Transparent"/>
        </Style>
        
    </Style>
    
    <Style Selector="StackPanel.header-logo">
        <Setter Property="Orientation" Value="Horizontal"/>
    </Style>
    
    <Style Selector="StackPanel.header-logo > TextBlock, Image" >
        <Setter Property="Margin" Value="5"/>
    </Style>
    
    <!-- Header | Search -->
    <Style Selector="TextBox.search">
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="#F5F5F5"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="CornerRadius" Value="5 0 0 5"/>
    </Style>
    
    <Style Selector="Button.button-search">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="60"/>
        <Setter Property="CornerRadius" Value="0 5 5 0"/>
        <Setter Property="Margin" Value="-0.5 0 0 0"/>
        <Setter Property="Cursor" Value="Hand"/>
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#DD56CE"/>
        </Style>
        
        <Style Selector="^:pressed">
            
        </Style>
        
    </Style>
    
    <!-- Header | Navigation buttons -->
    <Style Selector="StackPanel.nav-buttons > Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        
        <Style Selector="^:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#E5E5E5"/>
            <Setter Property="CornerRadius" Value="10"/>
        </Style>
        
    </Style>
    
</Styles>
